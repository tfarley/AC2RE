<Window x:Class="AC2RE.DatTool.UI.HeightmapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AC2RE.DatTool.UI"
        mc:Ignorable="d"
        Title="AC2RE Heightmap" Height="800" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="saveMenuItem" Header="Save" Click="saveMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Image x:Name="mapImage" Width="720" Height="720" Stretch="Fill"/>
    </DockPanel>
</Window>
